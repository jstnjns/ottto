h1 Modules

.row
  .col-md-4
    .list-group
      a.list-group-item(
        ng-repeat='module in modules',
        ng-click='activate(module)',
        ng-class='{"active":isActive(module)}'
      )
        span.badge {{module.$attributes.group.name}}
        h3.list-group-item-heading {{module.$attributes.name}}

    a.btn.btn-primary(ng-click='new()') New

  .col-md-8(
    ng-controller='ModuleController',
    ng-include='"views/modules/module.html"',
    ng-if='module'
  )